<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nice.mapper.BbsRoleMapper">
    <!-- 根据角色id获取角色名称 -->
    <select id="queryBbsRoleNameByBbsRoleId" resultType="java.lang.String">
        select bbs_role_name from bbs_role where bbs_role_id = #{bbsRoleId};
    </select>
</mapper>